@{
  Layout="_Layout";
}

@using Registrar.Models;

<h1>Departments</h1>

@if (@Model.Count == 0)
{
  <h3>No Courses have been added yet!</h3>
}

@foreach (Department department in Model)
{
  <li>@Html.ActionLink($"{department.Name}", "Details", new { id = department.DepartmentId})</li>
}

<div>
  <div class="outside_side_bar">
    <div class="side_bar">
      <header>Epic Navi:</header>
      <br>
      <span>@Html.ActionLink("Add new Department", "Create")</span>
      <br>
      <span>@Html.ActionLink("Home", "Index", "Home")</span>
    </div>
  </div>
</div>